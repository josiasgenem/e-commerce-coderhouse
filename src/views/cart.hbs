{{> navbar user=user}}

<div>
    <h1>Cart</h1>
    <a href="/api/products">Go to Products</a>
</div>

<div class="products-container">

    {{#if resp.products}}
    {{#each resp.products}}
        <div id={{product.id}} class="product-card">
                <div class="card-header">
                    <h3 class="product-title">
                        {{ product.title }}
                    </h3>
                    <p class="product-price">
                        $ {{ product.price }}
                    </p>
                </div>
                <div class="card-body">
                    <div class="body-left-content">
                    <p class="product-description">
                        {{ product.description }}
                    </p>
                    </div>
                    <div class="body-right-content">
                        <p class="product-quantity">x {{ quantity }}</p>
                        <i data-id="{{ product.id }}" class="btn-deleteFromCart fa fa-trash"></i>
                    </div>
                </div>
                <div class="card-footer">
                    <p class="product-category">
                        Category: <strong>{{ product.category }}</strong>
                    </p>
                </div>

        </div>

    {{/each}}
    {{else}}
        <p class="no-data">There are no Products to show</p>
    {{/if}}

</div>

{{#if resp.products}}

<div>
    <button id="buy-btn" data-id={{resp.id}}>Buy!</button>
</div>

{{/if}}